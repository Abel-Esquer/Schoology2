@using Schoology2.Core.Entidades
@model List<Curso>
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Cursos</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">

                        <a href="@Url.Action("Registro", "Curso", new { id = 0 })" class="btn btn-success">Agregar nuevo</a>

                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Curso</th>
                                        <th>Clave</th>
                                        <th>Profesor</th>
                                        <th>Correo</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Curso c in Model)
                                    {
                                        <tr>
                                            <td>
                                                @c.Nombre
                                            </td>
                                            <td>
                                                @c.Clave
                                            </td>
                                            <td>
                                                @c.Profesor.Nombre @c.Profesor.Apellido
                                            </td>
                                            <td>
                                                @c.Profesor.Correo
                                            </td>
                                            <td>
                                                @*<a href="@Url.Action("Registro", "Estado", new { id = e.Id })" class="btn btn-primary">Editar</a>*@
                                                <a class="btn btn-danger">Eliminar</a>
                                            </td>
                                        </tr>

                                    }

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>