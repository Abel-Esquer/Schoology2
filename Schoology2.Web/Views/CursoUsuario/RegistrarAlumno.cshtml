@using Schoology2.Core.Entidades
@model ModeloCursoUsuario
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Usuarios</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Apellido</th>
                                        <th>Correo</th>
                                        <th>Contraseña</th>
                                        <th>Rol</th>
                                        <th>Añadir</th>
                                    </tr>
                                </thead>
                                <tbody>
                                        @foreach(Usuario a in Model.Usuario)
                                        {
                                            <tr>
                                                <td>
                                                    @a.Nombre
                                                </td>
                                                <td>
                                                    @a.Apellido
                                                </td>
                                                <td>
                                                    @a.Correo
                                                </td>
                                                <td>
                                                    @a.Contraseña
                                                </td>
                                                <td>
                                                    @a.Rol
                                                </td>
                                                <td>
                                                    <form action="@Url.Action("Aniadir", "CursoUsuario")">
                                                        <input type="hidden" class="form-control" name="idCurso" value="@Model.Curso.Id">
                                                        <input type="hidden" class="form-control" name="idAlumno" value="@a.Id">
                                                        <button class="btn fa fa-plus btn-success btn-circle" type="submit"></button>
                                                    </form>
                                                </td>
                                                <td>
                                            </tr>
                                        }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Content/js/Schoology2/Usuario.js"></script>