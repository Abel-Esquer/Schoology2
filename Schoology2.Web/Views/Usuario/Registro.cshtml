@using Schoology2.Core.Entidades
@model Usuario

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Registro de estado</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">

                        <form action="@Url.Action("Guardar","Usuario")">
                            <input type="hidden" class="form-control" name="id" value="@Model.Id" />
                            <div class="form-group">
                                <label>Nombre:</label>
                                <input class="form-control" name="nombre" value="@if(Model.Id != 0) { @Model.Nombre}" />
                                <label>Apellido:</label>
                                <input class="form-control" name="apellido" value="@if(Model.Id != 0) { @Model.Apellido}" />
                                <label>Correo:</label>
                                <input class="form-control" name="correo" value="@if(Model.Id != 0) { @Model.Correo}" />
                                <label>Contraseña:</label>
                                <input class="form-control" name="contraseña" value="@if(Model.Id != 0) { @Model.Contraseña}" />
                                <label>Rol:</label>
                                <select name="rol" id="rol">
                                    @if (Model.Rol == "admin")
                                    {
                                        <option value="admin">Admin</option>
                                        <option value="profesor">Profesor</option>
                                        <option value="alumno">Alumno</option>
                                    }
                                    else if (Model.Rol == "profesor")
                                    {
                                        <option value="profesor">Profesor</option>
                                        <option value="admin">Admin</option>
                                        <option value="alumno">Alumno</option>
                                    }
                                    else
                                    {
                                        <option value="alumno">Alumno</option>
                                        <option value="admin">Admin</option>
                                        <option value="profesor">Profesor</option>
                                    }
                                </select>
                            </div>
                            <button class="btn btn-success" type="submit">Guardar</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>