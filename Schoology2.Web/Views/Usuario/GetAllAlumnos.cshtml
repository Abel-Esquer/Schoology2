@using Schoology2.Core.Entidades
@model List<Usuario>
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Usuarios</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Apellido</th>
                                        <th>Correo</th>
                                        <th>Contraseña</th>
                                        <th>Rol</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Usuario u in Usuario.GetAllAlumnos())
                                    {
                                        <tr>
                                            <td>
                                                @u.Nombre
                                            </td>
                                            <td>
                                                @u.Apellido
                                            </td>
                                            <td>
                                                @u.Correo
                                            </td>
                                            <td>
                                                @u.Contraseña
                                            </td>
                                            <td>
                                                @u.Rol
                                            </td>
                                            <td>
                                                <form href="@Url.Action("Aniadir", "CursoUsuario", @u.Id)"><a class="btn fa fa-plus btn-success btn-circle"></a></form>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Registro", "Usuario", new { id = u.Id })" class="btn fa fa-edit btn-primary btn-circle"></a>
                                                <a onclick="eliminar(@u.Id)" class="btn fa fa-trash btn-danger btn-circle"></a>
                                            </td>

                                        </tr>

                                    }

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Content/js/Schoology2/Usuario.js"></script>